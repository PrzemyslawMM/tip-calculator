{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint",
        "prettier"
    ],
    "settings": {
        "import/resolver": {
            "node": {
                "extensions": [".js", ".jsx", ".ts", ".tsx"],
                "moduleDirectory": ["node_modules","src/"]
            }
        }
    },
    "rules": {
        "prettier/prettier": [
            "warn",
            {
                "tabWidth": 2,
                "singleQuote": true,
                "endOfLine": "auto",
                "printWidth": 80
            }
        ],
        "no-param-reassign": "off",
        "operator-linebreak": "off",
        "import/prefer-default-export": "off",
        "no-unused-vars": "warn",
        "prefer-const": "off",
        "import/extensions": [
            "error",
            "ignorePackages",
            {
                "js": "never",
                "jsx": "never",
                "ts": "never",
                "tsx": "never"
            }
        ]
    }
}
